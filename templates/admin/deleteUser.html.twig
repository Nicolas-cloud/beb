{% extends 'base.html.twig' %}

{% block title %}Supprimer utilisateur | {{ parent() }}{% endblock %}

{% block body %}

    <div class="alert alert-danger">
        <strong>Avertissement !</strong> Vous êtes en train de supprimer l'utilisateur suivant :
        <ul>
            <li><strong>Nom : </strong> {{ user.Nom }}</li>
            <li><strong>Pseudo : </strong>{{ user.Pseudo }}</li>

        </ul>
    </div>
    <div class="collapse navbar-collapse">
    {{ form_start(form, {'attr': {'class': 'navbar-form navbar-left'}}) }}
    {{ form_widget(form) }}
        <a href="{{ path('admin_utilisateurs') }}" class="btn btn-success" role="button"><span class="glyphicon glyphicon-off" aria-hidden="true"></span>Annuler</a>
        <button type="submit" class="btn btn-danger" onclick="return confirm('Êtes vous sûr ??')">
        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
        Supprimer
    </button>
    {{ form_end(form) }}
    </div>
{% endblock %}