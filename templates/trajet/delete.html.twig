{% extends 'base.html.twig' %}

{% block title %}Supprimer trajet | {{ parent() }}{% endblock %}

{% block body %}

    <div class="alert alert-danger">
        <strong>Avertissement !</strong> Vous êtes en train de supprimer le stage suivant :
        <ul>
            <li><strong>Ville de départ : </strong> {{ trajet.VilleDepart }}</li>
            <li><strong>Ville d'arrivée : </strong>{{ trajet.VilleArrivee }}</li>
            <li><strong>Heure de départ : </strong>{{ trajet.HeureDepart|date('h:i:s') }}</li>
            <li><strong>Heure d'arrivée : </strong>{{ trajet.HeureArrivee|date('h:i:s') }}</li>
            <li><strong>Date de création : </strong>{{ trajet.DateCreation|date('m/d/Y') }}</li>
        </ul>
    </div>
    <div class="collapse navbar-collapse">
    {{ form_start(form, {'attr': {'class': 'navbar-form navbar-left'}}) }}
    {{ form_widget(form) }}
        <a href="{{ path('trajet.list') }}" class="btn btn-success" role="button"><span class="glyphicon glyphicon-off" aria-hidden="true"></span>Annuler</a>
        <button type="submit" class="btn btn-danger" onclick="return confirm('Êtes vous sûr ??')">
        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
        Supprimer
    </button>
    {{ form_end(form) }}
    </div>
{% endblock %}